{
  "name": "word-ai-editor",
  "version": "0.1.0",
  "description": "AI-powered Word document editor with version control",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:tauri\" \"npm run dev:python\"",
    "dev:tauri": "tauri dev",
    "dev:python": "cd python && python -m word_ai.main",
    "build": "tauri build",
    "build:python": "cd python && pip install -r requirements.txt && pyinstaller word_ai/main.spec",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "monaco-editor": "^0.55.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "vite": "^6.0.7"
  }
}
